:80 {
    # Rutas est√°ticas servidas por Caddy
    handle /img/* {
        root * /usr/share/caddy/public
        file_server
    }

    handle /scripts/* {
        root * /usr/share/caddy/public
        file_server
    }

    handle /css/* {
        root * /usr/share/caddy/public
        file_server
    }

    reverse_proxy switchers:8000
}

